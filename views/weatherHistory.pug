doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(href='https://fonts.googleapis.com/css?family=Poppins:400,500,600&display=swap' rel='stylesheet')
  link(rel='stylesheet' href='css/style.css')
  title Weather Api
nav
  button#locateBtn W
  button#unitBtn H
div.date-box
  label From
  input.date-input.fromdate(type='date')
  label To
  input.date-input.todate(type='date')
  button.search-date Search
table.fixed_headers
  thead
    tr
      th Search Query
      th Country
      th Climate 
      th Description
      th Temperature
      th Pressure
      th Humidity
      th Created At 
      th Coordinates
  tbody
    each el in data
      tr
        td=el.searchQuery
        td=el.weather.country
        td=el.weather.main
        td=el.weather.description 
        td=el.weather.temp 
        td=el.weather.pressure 
        td=el.weather.humidity 
        td=new Date(el.createdAt).toString().split(' ').splice(0,5).join(' ')
        td=el.coord
script(src='js/index.js')  
    
